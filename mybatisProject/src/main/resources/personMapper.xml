<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--  mybatis映射文件<数据库对象与javaMapper类映射>  -->
<mapper namespace="personMapper"><!-- 映射文件的相对路径 -->

    <select id="queryPersonById" parameterType="int" resultType="org.legend.mybatis.entity.Person">
        select * from `person` where id = #{id}   <!-- 没有;号 -->
    </select>

</mapper>














